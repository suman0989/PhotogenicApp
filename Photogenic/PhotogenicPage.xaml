<?xml version="1.0" encoding="utf-8"?>
<ContentPage x:Name="signupContentPage" xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	xmlns:local="clr-namespace:Photogenic" 
	x:Class="Photogenic.PhotogenicPage" BackgroundImage="back.jpeg">
<StackLayout x:Name="upperStack"
		Margin="20"
		Padding="0,0,0,0" 
		HorizontalOptions="FillAndExpand"
		VerticalOptions="StartAndExpand" BackgroundColor="Transparent">

		<ScrollView x:Name="userscroll" 
		VerticalOptions="CenterAndExpand" 
		HorizontalOptions="FillAndExpand" BackgroundColor="Transparent">

		<StackLayout Padding="10,10,10,10"
		VerticalOptions="CenterAndExpand" 
		HorizontalOptions="FillAndExpand" 
		BackgroundColor="Transparent">
		<Image Source="logo"/>
		<Entry  x:Name="fName" Placeholder="First Name" PlaceholderColor="Black" WidthRequest="150" />	
		<Entry  x:Name="lName" Placeholder="Last Name" PlaceholderColor="Black" WidthRequest="150" />	
		<Entry  x:Name="email"  Keyboard="Email" Placeholder="Email"  PlaceholderColor="Black" WidthRequest="150" />	
		<Entry  x:Name="mobile" Keyboard="Telephone" Placeholder="Mobile Number" PlaceholderColor="Black" WidthRequest="150" />	
		<Entry  x:Name="pswd" IsPassword="true"  Placeholder="Password" PlaceholderColor="Black" WidthRequest="150" />	
		<Entry  x:Name="cnfPswd" IsPassword="true" Placeholder="Confirm Password" PlaceholderColor="Black" WidthRequest="150" />	
	    <ActivityIndicator x:Name="activity" IsVisible="false" IsRunning="false" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" />

		<Button x:Name="signupbtn" Margin="20" Clicked="signUpAction" BackgroundColor="Maroon" TextColor="White" Text="Sign Up"/>
	
</StackLayout>
</ScrollView>
</StackLayout>

	
</ContentPage>
